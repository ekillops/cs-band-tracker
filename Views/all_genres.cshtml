@{
  Layout="Shared/_Layout.cshtml";
}
<h3>All Genres</h3>

@if (Model.Count != 0)
{
  @foreach (var genre in Model)
  {
    <h4>@genre.Name</h4>
    <p><small><a href="/genres/@genre.Id">[visit genre page]</small></a></p>
  }
}
else
{
  <p>There are no genres to display.</p>
}
<p>
  <a href="/genres/new" class="btn btn-primary btn-md">New Genre</a>
  <form class="form-inline" action="/genres/delete_all" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-primary btn-md">Delete All</button>
  </form>
</p>
